<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.aftermathwizard" name="Aftermath Wizard" version="0.0.1a" provider-name="Aftermath">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Aftermath Wizard</summary>
    <description lang="en">Aftermath Wizard allows you to get access to the latest Aftermath Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.aftermathwizard" name="[COLOR dodgerblue]Aftermath[/COLOR] Repo" version="0.0.1" provider-name="Aftermath">
	<extension point="xbmc.addon.repository" name="Aftermath Repo">
		<info compressed="false">https://raw.githubusercontent.com/aftermathbuilds/aftermathwizard/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/aftermathbuilds/aftermathwizard/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/aftermathbuilds/aftermathwizard/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Aftermath Repository</summary>
		<description>Home of the Aftermath wizard</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
